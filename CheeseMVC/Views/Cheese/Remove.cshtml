@{
}

<h1>Remove a Cheese</h1>

<form method="post">
    <div class="checkbox">
        @foreach (Cheese cheese in ViewBag.cheeses)
        {
            <input type="checkbox" name="cheeseNames" value=@cheese.Name id=@cheese.Name />
            <label for=@cheese.Name>@cheese.Name : @cheese.Description </label>
            <br />
        }
    </div>

    <input type="submit" value="Remove Cheese" />
</form>
